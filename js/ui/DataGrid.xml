<?xml version="1.0"?>
<ui:DataGridClass xmlns="http://www.w3.org/1999/xhtml" xmlns:js="js.core" xmlns:ui="js.ui" class="data-grid">
    <ui:ItemsView items="{$columns}" itemKey="column" class="data-grid-head" tagName="div">
        <js:Template name="item">
            <div>{$column.title}</div>
        </js:Template>
    </ui:ItemsView>
    <ui:DataGridItemsView columns="{$columns}" data="{data}" itemHeight="{rowHeight}"/>
</ui:DataGridClass>