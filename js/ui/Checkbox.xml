<?xml version="1.0"?>
<ui:View xmlns="http://www.w3.org/1999/xhtml" xmlns:js="js.core" xmlns:ui="js.ui" tagName="label">
    <js:Script><![CDATA[
        (function () {
            return {
                defaults: {
                    selected: false,
                    value: null,
                    label: ""
                },
                $classAttributes: ['label']
            }
        })
        ]]>
    </js:Script>
    <js:Template name="layout">
        <input type="checkbox" selected="{{selected}}" value="{{value}}"/> <ui:PlaceHolder name="label"/>
    </js:Template>
    <js:Template name="label">
        {label}
    </js:Template>
</ui:View>