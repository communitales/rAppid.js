                </attribute>
                <attribute name="componentClass" default="stage">
                    <annotation>
                        <documentation>

                        </documentation>
                    </annotation>
                </attribute>
            </extension>
        </complexContent>
    </complexType>
    <complexType name="Window">
        <complexContent>
            <extension base="ns2:View">
                <annotation>
                    <documentation source="http://www.rappidjs.com/#/api/js.core.Window">

                    </documentation>
                </annotation>
                <sequence>
                    <any processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
                </sequence>
                <attribute name="componentClass" default="window">
                    <annotation>
                        <documentation>

                        </documentation>
                    </annotation>
                </attribute>
            </extension>
        </complexContent>
    </complexType>
    <complexType name="WindowManager">
        <complexContent>
            <extension base="ns1:HtmlElement">
                <annotation>
                    <documentation source="http://www.rappidjs.com/#/api/js.core.WindowManager">
                        The WindowManager manages Windows on the Stage.

                    </documentation>
                </annotation>
                <sequence>
                    <any processContents="lax" minOccurs="0" maxOccurs="unbounded"/>
                </sequence>
                <attribute name="tagName" default="div">
                    <annotation>
                        <documentation>

                        </documentation>
                    </annotation>
                </attribute>
                <attribute name="modalActive">
                    <annotation>
                        <documentation>

                        </documentation>
                    </annotation>
                </attribute>
                <attribute name="class" default="window-manager {modalActiveClass()}">
                    <annotation>
                        <documentation>

                        </documentation>
                    </annotation>
                </attribute>
            </extension>
        </complexContent>
    </complexType>
</schema>