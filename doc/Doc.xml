              xmlns:app="doc">

    <js:Injection>
        <data:RestDataSource cid="api" endPoint="doc/docs" gateway="doc">
            <conf:Type path="docs" className="doc.model.Class" alias="Class"/>
        </data:RestDataSource>

        <js:Router cid="router">
            <conf:Route name="show" regex="^view/([^/]+)$" onexec="showDocumentation" />
        </js:Router>

    </js:Injection>

    <div class="navbar navbar-fixed-top">
