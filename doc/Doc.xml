                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div style="margin-top: 50px">
        <section>
            <header>
                <input type="text" value="searchtext">
                    <a href="#" class="search-reset"></a>
                </input>
            </header>
            <div>
                <ui:SelectionView list="{classes}" multiSelect="false" tagName="ul" class="nav nav-pills nav-stacked">
                    <js:Template name="item">
                        <li class="{$item.type}">
                            <a href="{getUrl({$item})}">{$item.className}</a>
                        </li>
                    </js:Template>
                </ui:SelectionView>
            </div>
        </section>
    </div>

